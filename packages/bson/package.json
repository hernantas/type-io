{
  "name": "@type-io/bson",
  "version": "0.1.0",
  "description": "BSON support for Type-IO",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "test": "mocha -r ts-node/register -r tsconfig-paths/register test/**/*.spec.ts",
    "test:coverage": "nyc yarn test",
    "lint:fix": "eslint --fix",
    "prepublish": "yarn build"
  },
  "devDependencies": {
    "@types/node": "^14.14.32",
    "tsconfig-paths": "^3.9.0"
  },
  "dependencies": {
    "@type-io/core": "*",
    "bson": "^4.2.3"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "all": true
  }
}
