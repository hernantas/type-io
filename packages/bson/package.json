{
  "name": "@type-io/bson",
  "version": "0.1.0",
  "description": "BSON support for Type-IO",
  "main": "dist/index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "test": "mocha -r ts-node/register test/**/*.spec.ts",
    "test:coverage": "nyc yarn test",
    "lint:fix": "eslint --fix"
  },
  "devDependencies": {
    "@types/node": "^14.14.32"
  },
  "dependencies": {
    "@type-io/core": "*",
    "bson": "^4.2.3"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "all": true
  }
}
