{
  "name": "@type-io/core",
  "version": "0.1.0",
  "description": "Core package for `type-io`",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Zulfikar Raditya Hernanta <hernantas@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "test": "mocha -r ts-node/register test/**/*.spec.ts",
    "test:coverage": "nyc yarn test",
    "lint:fix": "eslint --fix",
    "prepublish": "yarn build"
  },
  "devDependencies": {
    "@types/chai-datetime": "^0.0.36",
    "chai-datetime": "^1.8.0"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "all": true
  }
}
