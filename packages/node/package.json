{
  "name": "@type-io/node",
  "version": "0.1.0",
  "description": "Node.js support for Type-IO",
  "main": "dist/index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "test": "mocha -r ts-node/register test/**/*.spec.ts",
    "test:coverage": "nyc yarn test",
    "lint:fix": "eslint --fix"
  },
  "devDependencies": {
    "@types/node": "^14.14.35"
  },
  "dependencies": {
    "@type-io/core": "*"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "all": true
  }
}
